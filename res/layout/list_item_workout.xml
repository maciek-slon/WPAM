<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ProgressBar
            android:id="@+id/pbProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:progress="33"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvWorkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="#00000000"
                android:drawableLeft="@drawable/ic_logbook_white"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="Just debug text"
                android:textSize="16dip" 
                android:textColor="#ffffff" android:shadowColor="#101010" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1"/>

            <TextView
                android:id="@+id/tvSummary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#00000000"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:text="Just debug text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" android:shadowColor="#101010" android:shadowDx="1" android:shadowDy="1" android:shadowRadius="1" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>